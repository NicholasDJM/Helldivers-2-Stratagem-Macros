{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useSingleVarDeclarator": {
					"level": "off"
				},
				"useTemplate": {
					"level": "info"
				}
			},
			"complexity": {
				"noForEach": {
					"level": "warn"
				}
			}
		}
	},
	"formatter": {
		"enabled": true,
		"lineEnding": "crlf",
		"indentStyle": "tab",
		"indentWidth": 4,
		"ignore": [
			"./src/js/stratagems.js"
		]
	}
}