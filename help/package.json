{
	"private": "true",
	"root": "true",
	"type": "module",
	"browserslist": [
		"defaults and fully supports es6-module"
	],
	"htmlnano": {
		"preset": "safe"
	},
	"scripts": {
		"dev": "vite --open",
		"dev:network": "vite --host --open",
		"build": "wireit",
		"lint": "wireit",
		"lint:fix": "wireit",
		"format": "wireit",
		"format:fix": "wireit"
	},
	"wireit": {
		"lint:fix": {
			"command": "biome lint ./src --write",
			"files": [
				"./src",
				"./biome.json"
			],
			"clean": false,
			"output": []
		},
		"lint": {
			"command": "biome lint ./src",
			"clean": false,
			"files": [
				"./src",
				"./biome.json"
			],
			"output": []
		},
		"format": {
			"command": "biome format ./src",
			"clean": false,
			"files": [
				"./src",
				"./biome.json"
			],
			"output": []
		},
		"format:fix": {
			"command": "biome format ./src --write",
			"clean": false,
			"files": [
				"./src",
				"./biome.json"
			],
			"output": []
		},
		"prep": {
			"clean": false,
			"dependencies": [
				"lint:fix",
				"format:fix"
			]
		},
		"build": {
			"command": "vite build",
			"files": [
				"./src",
				"./public",
				"./vite.config.ts",
				"./postcss.config.ts",
				"./package.json"
			],
			"clean": false,
			"output": [
				"dist"
			],
			"dependencies": [
				"prep"
			]
		}
	},
	"dependencies": {
		"@picocss/pico": "^2.0.6",
		"@tabler/icons": "^3.16.0",
		"@vituum/vite-plugin-posthtml": "^1.1.0",
		"alpinejs": "^3.14.1",
		"base64-string": "^1.1.3",
		"cssnano": "^7.0.6",
		"fuse.js": "^7.0.0",
		"htmlnano": "^2.1.1",
		"i18next": "^23.15.1",
		"posthtml-noopener": "^1.0.5",
		"posthtml-postcss-treeshaker": "^0.3.0",
		"posthtml-prism": "^2.0.1",
		"posthtml-toc": "^1.0.3",
		"prismjs": "^1.29.0",
		"svgo": "^3.3.2",
		"terser": "^5.31.5",
		"vite": "^5.4.0",
		"vite-plugin-singlefile": "^2.0.2",
		"wireit": "^0.14.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@types/alpinejs": "^3.13.10"
	}
}
